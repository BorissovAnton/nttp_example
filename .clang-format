---
Language: Cpp
ColumnLimit: 80
Standard: c++20
IndentWidth: 2
TabWidth: 2
UseTab: Never
PointerAlignment: Left
IndentCaseLabels: true
AlwaysBreakTemplateDeclarations: Yes
InsertBraces: true
SortIncludes: true
# system headers come first
IncludeCategories:
  - Regex: "^<.*>"
    Priority: 1
  - Regex: '^".*\.(h|hpp)"'
    Priority: 2
